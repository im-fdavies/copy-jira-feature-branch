{
  "manifest_version": 3,
  "name": "Jira FAB Branch Copier",
  "version": "1.2.0",
  "description": "Copy `gco -b feature/FAB-XXXXXX` for the current Jira ticket.",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "Copy FAB branch command",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "copy_fab_command": {
      "suggested_key": {
        "default": "Alt+Shift+J"
      },
      "description": "Copy FAB branch command"
    }
  }
}